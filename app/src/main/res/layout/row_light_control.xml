<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_136sdp"
        android:layout_margin="@dimen/_6sdp"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:cardBackgroundColor="@color/brand_glass_one"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_12sdp"
        app:rippleColor="@color/transparent">

        <LinearLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/brand_glass_one">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/holder_light_icon"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp"
                android:layout_margin="@dimen/_12sdp"
                android:outlineSpotShadowColor="@color/card_elevation_shadow"
                app:cardCornerRadius="@dimen/_360sdp"
                app:cardElevation="@dimen/_8sdp"
                app:rippleColor="@color/transparent"
                app:strokeColor="@color/brand_active"
                app:strokeWidth="@dimen/_0sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_light_icon"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>