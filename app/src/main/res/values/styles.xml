<resources>

    <style name="inputBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="hintTextColor">@color/system_content_dark</item>
        <item name="boxStrokeColor">@color/brand_accent_primary</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="android:enabled">true</item>
        <item name="android:textColorHint">@color/system_content_dark30</item>
    </style>

    <style name="volumeSlider" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/SmallFootnotePlus</item>
        <item name="backgroundTint">@color/system_content_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/brand_accent_primary</item>
        <item name="android:elevation">@dimen/_24sdp</item>
        <item name="cardElevation">@dimen/_24sdp</item>
        <item name="elevation">@dimen/_24sdp</item>
    </style>

</resources>